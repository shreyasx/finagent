# FinAgent Environment Configuration
# Single env file used by both docker-compose.dev.yml and docker-compose.prod.yml

# App
DEBUG=false

# Database (PostgreSQL)
POSTGRES_PASSWORD=finagent

# ChromaDB
CHROMA_HOST=chromadb
CHROMA_PORT=8100

# S3 / MinIO
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=finagent-documents
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# LLM API Key (Anthropic)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
DEFAULT_LLM=claude-sonnet-4-5-20250929

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# Frontend (baked into the Next.js build via docker-compose build args)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
