# ---- Builder Stage ----
FROM python:3.12.10-slim-bookworm AS builder

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libffi-dev \
    && rm -rf /var/lib/apt/lists/*

COPY backend/requirements.txt .

# Install everything in one pass with CPU-only torch index taking priority.
# This ensures sentence-transformers gets torch+cpu instead of full CUDA torch.
RUN pip install --no-cache-dir --prefix=/install \
    --extra-index-url https://download.pytorch.org/whl/cpu \
    torch==2.6.0+cpu \
    -r requirements.txt

# ---- Production Stage ----
FROM python:3.12.10-slim-bookworm

WORKDIR /app

# Runtime-only system dependencies (no build-essential)
RUN apt-get update && apt-get install -y --no-install-recommends \
    libpango-1.0-0 \
    libpangocairo-1.0-0 \
    libgdk-pixbuf-2.0-0 \
    shared-mime-info \
    tesseract-ocr \
    && rm -rf /var/lib/apt/lists/*

COPY --from=builder /install /usr/local

COPY backend/ backend/

EXPOSE 8000

# t3.large: 2 vCPUs â€” use 2 workers
CMD ["uvicorn", "backend.main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "2"]
